

@{
    ViewBag.Title = "My Web Design Journey";
    ViewBag.Message = "";
}




<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Responsive Test</title>
    <link href="/Content/media.css" rel="stylesheet" />


    <style>

        .section-about {
            font-family: Roboto Slab, serif;
            height: 100%; /* Fill container */
            color: #ffff;
            font-size: 2rem;
            font-weight: 400;
            letter-spacing: 1px;
            line-height: 1.6;
            margin-bottom: 4.2rem;
            width: 100%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: flex-start; /* Align to the top */
            padding: 50px 0; /* Add padding for spacing */
        }

        .about-content {
            width: 60%; /* Adjust width to have a better layout */
            display: flex;
            align-items: flex-start; /* Align items to the top */
            gap: 20px; /* Spacing between text and image */
            flex-wrap: wrap; /* Allow content to wrap if space is constrained */
            padding-top: 150px;
            height: 100%;
            margin-left: 20%;
        }

        .about-text {
            flex: 1; /* Take up remaining space */
            max-width: 100%; /* Limit the max width of text */
        }

        .about-image img {
            width: 300px; /* Set image width */
            border-radius: 10px; /* Optional rounded corners */
        }

        .logos {
            height: 50%;
            margin: 0 auto;
            overflow: hidden;
            padding: 25px 0;
            position: relative;
            white-space: nowrap;
            width: 90%;
        }

        .logos {
            position: relative;
            overflow: hidden;
            width: 90%;
            height: 50%;
            padding: 25px 0;
            white-space: nowrap;
            margin: 0 auto;
            margin-left: 14%;
        }

            .logos::before,
            .logos::after {
                content: "";
                position: absolute;
                top: 0;
                width: 150px;
                z-index: 2;
                height: 100%;
            }

            .logos::before {
                left: 0;
            }

            .logos::after {
                right: 0;
            }

        .scroll-slide {
            display: inline-block;
            animation: 20s scroll infinite linear;
        }

            .scroll-slide span {
                text-transform: uppercase;
                font-size: 1.2rem;
                margin: 0 30px;
                letter-spacing: 0.3em;
                background: #212529;
                color: #fff;
                font-weight: 500;
                padding: 10px 15px;
                border-radius: 5px;
            }

        a:visited {
            color: #fff;
            font-size: 2.4rem;
            text-decoration: none;
        }
    </style>
</head>
<body>
    <div class="section-about">
        <div class="about-content">
            <div class="about-text">

                <h3>Joe Nguyen</h3>
                <h3>@ViewBag.Title. &nbsp;&nbsp; @ViewBag.Message</h3>

                <p>
                    I am a beginner web designer passionate about creating visually appealing and user-friendly websites.
                    I'm currently learning the fundamentals of HTML, CSS, and JavaScript, and exploring frameworks like Bootstrap to enhance my designs.
                    I enjoy experimenting with layouts, typography, and color schemes to improve user experience.
                    As I continue to grow my skills, I'm excited to take on new challenges, build engaging web projects,
                    and eventually expand into more advanced technologies like React, and Azure.
                    I'm eager to learn, create, and bring ideas to life on the web!
                </p>
            </div>

            <div class="about-image">

                <img src="/Content/Image/IMG_67323_new.jpg" alt="Joe's Picture">
            </div>
        </div>

        <!-- Skills Section Inside About -->

        <div class="logos">


            <div class="scroll-slide" id="scroll-slide">
                <span>HTML</span>
                <span>Azure</span>
                <span>CSS</span>
                <span>JavaScript</span>
                <span>Sql</span>
                <span>JQuery</span>
                <span>Bootstrap</span>
                <span>Git</span>
                <span>SQL Server</span>
                <span>C#</span>
            </div>
        </div>

    </div>

    <script>// JavaScript animation for scrolling the skills horizontally
        let scrollSlide = document.getElementById('scroll-slide');
        let scrollWidth = scrollSlide.scrollWidth; // Get the total width of the scroll
        let containerWidth = scrollSlide.clientWidth; // Get the width of the visible container

        function animateScroll() {
            let scrollAmount = 0;

            function scroll() {
                // Move scrollAmount to the right continuously
                scrollAmount++;

                // Reset scroll when it reaches the end
                if (scrollAmount >= scrollWidth) {
                    scrollAmount = 0;
                }

                // Apply the transform to create the scrolling effect
                scrollSlide.style.transform = `translateX(-${scrollAmount}px)`;
            }

            // Run the scroll function every 10ms
            setInterval(scroll, 20);
        }

        animateScroll();

    </script>
</body>
</html>








